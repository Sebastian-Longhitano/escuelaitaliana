extends ../layout

block content
    h3 Listado de Alumnos

    table.table.table-striped
        thead
            tr
                th Nombre
                th Apellido
                th Usuario
                th Acciones
        tbody
            each alumno in alumnos
                tr
                    td= alumno.nombre
                    td= alumno.apellido
                    td= alumno.usuario.usuario
                    td
                        a.btn.btn-primary(href=`/administrativo/alumno/edit/${alumno._id}`) Editar
                        a.btn.btn-danger(href=`/administrativo/alumno/delete/${alumno._id}`) Eliminar

    a.btn.btn-success(href="/administrativo/alumnos/new") Agregar Alumno
